//Spriggan Workflow Configuration
//Description: Workflow for generating a genomic comparison between HAI/AR samples.
//Author: Kelsey Florek and Abigail Shockey
//email: kelsey.florek@slh.wisc.edu, abigail.shockey@slh.wisc.edu

//#########################
//###Pipeline Parameters###
//#########################

//starting parameters
params.reads=''
params.outdir='spriggan_results'

//PreProcessing
params.name_split_on='_'

//Trimming parameters
params.minlength=10
params.trimdirection="lr"
params.qualitytrimscore=10
params.savetrimmedreads=false

//AMRFinderPlus parameters
params.selected_genes="'NDM|OXA|KPC|IMP|VIM'"

//Kraken parameters
params.kraken_db=""

//Testing
params.test = false

//#######################
//###Pipeline Profiles###
//#######################

report.enabled = true
trace.enabled = true

//#####################
//####Docker Params####
//#####################

docker.enabled = true
docker.runOptions = "-u \$(id -u):\$(id -g)"

//####################
//#Singularity Params#
//####################
//singularity.enabled = true
//singularity.runOptions = ""
//process.stageInMode = "copy"

//####################
//##AWS Batch Params##
//####################
//process.executor = 'awsbatch'
//process.queue = ''
//aws.batch.cliPath = '/home/ec2-user/miniconda/bin/aws'
//aws.region = 'us-east-1'
//workDir = 's3://'

//#######################
//##Google Cloud Params##
//#######################
//process.executor = ''
//google.project = ''
//google.location = ''
//google.region = ''
//workDir = ''
//google.lifeSciences.bootDiskSize = 50.GB

//##################
//##Nextflow Tower##
